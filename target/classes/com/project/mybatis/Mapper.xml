<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.Mapper">

	<insert id="insertUserData" parameterType="com.project.dto.UserDTO">
		insert into users(userNum,userId,userPwd,name,gender,email,tel,right)
		values(userNum_seq.nextval,#{userId},#{userPwd},#{userName},#{gender},#{email},${tel},0)
	</insert>
	
	<select id="overlapId" parameterType="map" resultType="int">
		select count(*) from users where userId=#{userId} 
	</select>
	
	<select id="overlapEmail" parameterType="map" resultType="int">
		select count(*) from users where email=#{userEmail} 
	</select>


</mapper>